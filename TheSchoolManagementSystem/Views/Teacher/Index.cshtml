@model TheSchoolManagementSystem.Models.Teacher

@{
    ViewData["Title"] = "";
}

<div class="container mt-4">
    <h1 class="text-center">Welcome, @Model.FirstName @Model.LastName</h1>

    <p class="text-center">You are teaching: @Model.Subject</p> <!-- Directly use the Subject string -->

    <p class="text-center">Choose an option below to manage your activities.</p>

    <div class="btn-group-vertical" role="group" aria-label="Teacher Actions">
        <a asp-action="Profile" asp-route-id="@Model.TeacherId" class="btn btn-info btn-lg shadow mb-3">View Profile</a>

        <a asp-action="ViewStudents" asp-route-teacherId="@Model.TeacherId" asp-route-subjectId="@ViewBag.SubjectId" class="btn btn-success btn-lg shadow mb-3">
            View Students for @Model.Subject <!-- Use the Subject string here -->
        </a>
    </div>
</div>
