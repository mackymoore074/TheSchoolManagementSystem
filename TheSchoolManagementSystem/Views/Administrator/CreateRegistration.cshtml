@model TheSchoolManagementSystem.Models.Registration

@{
    ViewData["Title"] = "Create Registration";
}

<h2>Create Registration</h2>

<form asp-action="CreateRegistration" method="post">
    <div class="form-group">
        <label asp-for="StudentId"></label>
        <select asp-for="StudentId" class="form-control" asp-items="@(new SelectList(ViewBag.Students, "StudentId", "FirstName"))">
            <option value="">Select a Student</option>
        </select>
        <span asp-validation-for="StudentId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="SubjectId"></label>
        <select asp-for="SubjectId" class="form-control" asp-items="@(new SelectList(ViewBag.Subjects, "SubjectId", "SubjectName"))">
            <option value="">Select a Subject</option>
        </select>
        <span asp-validation-for="SubjectId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Marks"></label>
        <input asp-for="Marks" class="form-control" />
        <span asp-validation-for="Marks" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
    <a asp-action="ManageRegistrations" class="btn btn-secondary">Cancel</a>
</form>
