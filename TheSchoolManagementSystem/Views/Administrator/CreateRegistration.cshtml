@model TheSchoolManagementSystem.Models.Registration

@{
    ViewData["Title"] = "Create Registration";
}

<h2>Create Registration</h2>

<form asp-action="CreateRegistration" method="post">
    <div class="form-group">
        <label asp-for="Student"></label>
        <select asp-for="StudentId" class="form-control" asp-items="ViewBag.Students">
            <option value="">Select a Student</option>
        </select>
        <span asp-validation-for="StudentId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Subject"></label>
        <select asp-for="SubjectId" class="form-control" asp-items="ViewBag.Subjects">
            <option value="">Select a Subject</option>
        </select>
        <span asp-validation-for="SubjectId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
    <a asp-action="ManageRegistrations" class="btn btn-secondary">Cancel</a>
</form>


