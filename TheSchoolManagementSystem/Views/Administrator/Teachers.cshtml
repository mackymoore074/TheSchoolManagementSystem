@model IEnumerable<TheSchoolManagementSystem.Models.Teacher>

@{
    ViewData["Title"] = "Teachers";
    int sn = 1; 
}
<div class="row my-3">
    <div class="col-12" style="text-align: right;">
       <a asp-action="CreateTeacher" class="btn btn-primary">Create New Teacher</a>
    </div>
</div>


<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>S/N</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Subject</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var teacher in Model)
        {
            <tr>
                <td>@(sn++)</td>
                <td>@teacher.FirstName</td>
                <td>@teacher.LastName</td>
                <td>@teacher.Email</td>
                <td>@teacher.Subject</td>
                <td>
                    <a asp-action="EditTeacher" asp-route-id="@teacher.TeacherId" class="btn btn-warning">Edit</a>
                    <a asp-action="DeleteTeacher" asp-route-id="@teacher.TeacherId" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
