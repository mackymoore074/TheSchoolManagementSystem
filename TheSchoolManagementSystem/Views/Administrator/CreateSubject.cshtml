@model TheSchoolManagementSystem.Models.Subject

@{
    ViewData["Title"] = "Create Subject";
}


<form asp-action="CreateSubject" method="post">
    <div class="form-group">
        <label asp-for="SubjectName"></label>
        <input asp-for="SubjectName" class="form-control" />
        <span asp-validation-for="SubjectName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="TeacherId"></label>
        <select asp-for="TeacherId" asp-items="@(ViewBag.Teachers)" class="form-control">
            <option value="">Select a Teacher</option>
        </select>
        <span asp-validation-for="TeacherId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>


