@model TheSchoolManagementSystem.Models.Teacher

@{
    ViewData["Title"] = "Delete Teacher";
    
}

<h3>Are you sure you want to delete this teacher?</h3>

<div>
    <h4>@Model.FirstName @Model.LastName</h4>
    
    <dl class="row">

        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>

        <dt class="col-sm-2">Subject</dt>
        <dd class="col-sm-10">@Model.Subject</dd>

        <dt class="col-sm-2">Administrator ID</dt>
        <dd class="col-sm-10">@Model.AdministratorId</dd>
    </dl>

    <form asp-action="DeleteTeacherConfirmed">
        <input type="hidden" asp-for="TeacherId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Teachers" class="btn btn-secondary">Cancel</a>
    </form>
</div>



