@model IEnumerable<TheSchoolManagementSystem.Models.Student>

@{
    ViewData["Title"] = "Students";
}

<h2>Students</h2>

<a asp-action="CreateStudent" class="btn btn-primary">Create New Student</a>

<table class="table">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Class Name</th>
            <th>Date of Birth</th>
            <th>Address</th>
            <th>Parent Name</th>
            <th>Parent Phone</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model)
        {
            <tr>
                <td>@student.FirstName</td>
                <td>@student.LastName</td>
                <td>@student.ClassName</td>
                <td>@student.DateOfBirth.ToShortDateString()</td>
                <td>@student.Address</td>
                
                <td>@student.ParentName</td>
                <td>@student.ParentPhone</td>
                <td>
                    <a asp-action="EditStudent" asp-route-id="@student.StudentId" class="btn btn-warning">Edit</a>
                    <a asp-action="DeleteStudent" asp-route-id="@student.StudentId" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

