<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TheSchoolManagementSystem.styles.css" asp-append-version="true" />
</head>
<body>
    <!-- Sidebar -->
    <nav id="sidebar">
        <div class="sidebar-header">
        </div>
        <ul>
            <li>
                <a asp-area="" asp-controller="Home" asp-action="Index" class="btn btn-primary">Home</a>
            </li>
            <li>
                <a asp-area="" asp-controller="Administrator" asp-action="Index" class="btn btn-primary">Administrators</a>
            </li>
            <li>
                <a asp-area="" asp-controller="Teacher" asp-action="Authenticate" class="btn btn-primary">Teachers</a>
            </li>
            <li>
                <a asp-controller="Students" asp-action="Authenticate" class="btn btn-primary">Student Access</a>
            </li>
        </ul>
    </nav>

    <!-- Main content -->
    <div id="content">
        <header>
            <h2>@ViewData["Title"]</h2>
        </header>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - TheSchoolManagementSystem - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

