@{
    ViewData["Title"] = "Welcome to the School Management System";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        body {
            background-color: #f8f9fa; /* Light background for contrast */
        }
        .welcome-container {
            margin-top: 100px;
            padding: 40px;
            background-color: #ffffff; /* White background for content */
            border-radius: 10px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1); /* Subtle shadow for depth */
        }
    </style>
</head>
<body>

    <div class="container welcome-container text-center">
        <h1 class="display-4">Welcome</h1>
        <p>We are excited to welcome you to the School Management System, a platform designed to streamline your academic experience and enhance communication within our school community.</p>
    </div>
</body>
</html>

