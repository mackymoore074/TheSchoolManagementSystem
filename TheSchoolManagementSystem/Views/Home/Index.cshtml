@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>School Management System</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* Add custom styles for the hero section */
        .hero {
            background-image: url('https://images.unsplash.com/photo-1454165804606-c3d57bc86b40?q=80&w=2940&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D');
            background-size: cover;
            background-position: center;
            color: white;
        }
        
        .hero .overlay {
            background-color: rgba(0, 0, 0, 0.5); /* Dark overlay for contrast */
            padding: 100px 0; /* Adjust padding as needed */
        }
    </style>
</head>
<body>

<!-- Navbar -->
<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <div class="container">
    <a class="navbar-brand" href="#">SchoolMS</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav ms-auto">
        <li class="nav-item">
          <a class="nav-link active" aria-current="page" href="#">Home</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/administrator">Administrator</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/Teacher/Authenticate">Teacher</a>
        </li>
        @* <li class="nav-item">
          <a class="nav-link" href="#">Student</a>
        </li> *@
        <li class="nav-item">
          <a class="btn btn-primary" href="/Students/Authenticate">Login</a>
        </li>
      </ul>
    </div>
  </div>
</nav>

<!-- Hero Section -->
<header class="hero">
    <div class="overlay">
        <div class="container text-center">
            <h1 class="display-4">Efficient School Management Made Easy</h1>
            <p class="lead">Manage students, teachers, and classes seamlessly with SchoolMS.</p>
            <a href="#" class="btn btn-lg btn-light">Get Started</a>
        </div>
    </div>
</header>

<!-- Features Section -->
<section class="py-5">
  <div class="container">
    <div class="row text-center">
      <div class="col-lg-4 mb-4">
        <div class="card h-100">
          <div class="card-body">
            <i class="bi bi-person-fill h1 text-primary"></i>
            <h5 class="card-title">Student Management</h5>
            <p class="card-text">Track student progress, attendance, and grades effortlessly.</p>
          </div>
        </div>
      </div>
      <div class="col-lg-4 mb-4">
        <div class="card h-100">
          <div class="card-body">
            <i class="bi bi-file-earmark-check h1 text-primary"></i>
            <h5 class="card-title">Teacher Management</h5>
            <p class="card-text">Assign courses, monitor performance, and engage with staff.</p>
          </div>
        </div>
      </div>
      <div class="col-lg-4 mb-4">
        <div class="card h-100">
          <div class="card-body">
            <i class="bi bi-calendar-check h1 text-primary"></i>
            <h5 class="card-title">Class Scheduling</h5>
            <p class="card-text">Easily manage and plan class schedules for the entire school.</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Testimonials Section -->
<section class="bg-light py-5">
  <div class="container">
    <h2 class="text-center mb-5">What Our Users Say</h2>
    <div class="row">
      <div class="col-lg-4">
        <div class="card shadow-sm">
          <div class="card-body">
            <p class="card-text">"SchoolMS transformed the way we handle student data. Highly recommended!"</p>
            <div class="d-flex align-items-center">
              <img src="https://via.placeholder.com/50" class="rounded-circle me-3" alt="Profile">
              <div>
                <h6 class="mb-0">John Doe</h6>
                <small>Principal, ABC School</small>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="col-lg-4">
        <div class="card shadow-sm">
          <div class="card-body">
            <p class="card-text">"Managing my class schedules has never been easier. Excellent platform!"</p>
            <div class="d-flex align-items-center">
              <img src="https://via.placeholder.com/50" class="rounded-circle me-3" alt="Profile">
              <div>
                <h6 class="mb-0">Jane Smith</h6>
                <small>Teacher, XYZ School</small>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="col-lg-4">
        <div class="card shadow-sm">
          <div class="card-body">
            <p class="card-text">"Our school’s admin tasks have become so much more efficient. Love it!"</p>
            <div class="d-flex align-items-center">
              <img src="https://via.placeholder.com/50" class="rounded-circle me-3" alt="Profile">
              <div>
                <h6 class="mb-0">Sarah Johnson</h6>
                <small>Administrator, DEF School</small>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Footer -->
<footer class="bg-dark text-white text-center py-4">
  <div class="container">
    <p class="mb-0">© 2024 SchoolMS. All Rights Reserved.</p>
    <ul class="list-inline">
      <li class="list-inline-item"><a href="#" class="text-white">Privacy Policy</a></li>
      <li class="list-inline-item"><a href="#" class="text-white">Terms of Use</a></li>
    </ul>
  </div>
</footer>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
